[Unit]
Description=Geth Fullnode
After=network.target auditd.service
Wants=network.target

[Service]
WorkingDirectory=/home/ubuntu
ExecStartPre=/usr/bin/bash -c "/usr/bin/systemctl set-environment NODE_NAME=$(hostname)"
ExecStart=/usr/bin/geth --identity "${NODE_NAME}" --ethstats "${NODE_NAME}:helloWorld@10.102.0.205"  --config /bkc-node/mainnet/config.toml --cache 8192
User=ubuntu
Group=ubuntu
Restart=always
RestartSec=5s

[Install]
WantedBy=default.target
Alias=geth.service